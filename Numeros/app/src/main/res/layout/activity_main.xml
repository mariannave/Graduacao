<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn1"
                android:text="@string/numero1"
                android:textSize="80sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button"
                android:textColor="@color/outraCor"
                android:layout_weight="1.3" />

            <Button
                android:id="@+id/btn2"
                android:text="@string/numero2"
                android:textSize="80sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/outraCor"
                android:layout_weight="1.3" />

            <Button
                android:id="@+id/btn3"
                android:text="@string/numero3"
                android:textSize="80sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/outraCor"
                android:layout_weight="1.3" />

        </LinearLayout>



    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">


            <Button
                android:id="@+id/btn4"
                android:text="@string/numero4"
                android:textSize="80sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/outraCor"
                android:layout_weight="1.3" />


            <Button
                android:id="@+id/btn5"
                android:text="@string/numero5"
                android:textSize="80sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/outraCor"
                android:layout_weight="1.3" />

            <Button
                android:id="@+id/btn6"
                android:text="@string/numero6"
                android:textSize="80sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/outraCor"
                android:layout_weight="1.3"/>
    </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:text="@string/numero7"
                android:textSize="80sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/outraCor"
                android:layout_weight="1.3" />

            <Button
                android:id="@+id/btn8"
                android:text="@string/numero8"
                android:textSize="80sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/outraCor"
                android:layout_weight="1.3" />


            <Button
                android:id="@+id/btn9"
                android:text="@string/numero9"
                android:textSize="80sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/outraCor"
                android:layout_weight="1.3" />

    </LinearLayout>




    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            android:text="@string/numero0"
            android:textSize="80sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:textColor="@color/outraCor"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>


