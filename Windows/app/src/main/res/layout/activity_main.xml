<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.windows.MainActivity"
    android:orientation="vertical"
    android:background="@color/colorBack">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tela Principal"
        android:textSize="70sp"
        android:layout_weight="9"
        android:textColor="@color/colorTextPrincipal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnMainSobre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sobre"
            android:textSize="13sp"
            android:background="@color/colorBotao"
            android:textColor="@color/colorTextBotao"/>

        <Button
            android:id="@+id/btnMainPalavra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Palavra"
            android:textSize="13sp"
            android:background="@color/colorBotao"
            android:textColor="@color/colorTextBotao"/>
        />

    </LinearLayout>


</LinearLayout>
